{
    "increment": "conventional:angular",
    "scripts": {
        "afterBump": "conventional-changelog -p angular -i CHANGELOG.md -s",
        "changelog": "conventional-changelog -p angular | tail -n +3"
    },
    "git": {
        "requireCleanWorkingDir": false,
        "tagName": "v%s",
        "addUntrackedFiles": true
    },
    "github": {
        "release": true,
        "releaseName": "%s"
    },
    "dist": {}
}